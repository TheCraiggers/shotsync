<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shortsteplabs.shotsync.ui.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/remote"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/remote"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/selectiveImport"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectiveImport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/selective_import"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/forceSync"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remote" />

    <Button
        android:id="@+id/forceSync"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="forceSync"
        android:text="@string/force_sync"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/precisionGps"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectiveImport" />

    <Button
        android:id="@+id/precisionGps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/precision_gps_2h"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/deleteDownloaded"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forceSync" />

    <Button
        android:id="@+id/deleteDownloaded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/delete_downloaded"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precisionGps" />
</android.support.constraint.ConstraintLayout>
